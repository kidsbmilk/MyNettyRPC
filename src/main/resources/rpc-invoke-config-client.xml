<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:nettyrpc="http://www.mynettyrpc.com/nettyrpc" xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.mynettyrpc.com/nettyrpc http://www.mynettyrpc.com/nettyrpc/nettyrpc.xsd">

    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <nettyrpc:reference id="addCalc" interfaceName="my.netty.rpc.services.AddCalculate" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>
    <nettyrpc:reference id="multiCalc" interfaceName="my.netty.rpc.services.MultiCalculate" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>
    <nettyrpc:reference id="personManage" interfaceName="my.netty.rpc.services.PersonManage" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>
    <nettyrpc:reference id="costTime" interfaceName="my.netty.rpc.services.CostTimeCalculate" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>
    <nettyrpc:reference id="access" interfaceName="my.netty.rpc.compiler.AccessAdaptive" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>
    <nettyrpc:reference id="ability" interfaceName="my.netty.rpc.core.AbilityDetail" protocol="PROTOSTUFFSERIALIZE" ipAddr="${rpc.server.addr}"/>

</beans>